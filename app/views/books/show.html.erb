<h3>Book Title:</h3>
<p><%= @book.title %></p>
<h3>Book Author:</h3>
<p><%= @book.author %></p>
<h4>Tags:</h4>
<%@book.tags.each do |tag|%>
  <p><%= tag %></p>
<%end%>
<h3>Reviews:</h3>
<%@book.reviews.each do |review|%>
  <p>
    <strong><%= review.user.username %>:</strong>
    <%=review.content%>
  </p>
<%end%>
<h3>Add a review:</h3>
<%=form_for([@book, @book.comments.build], local: true) do |f|%>
  <p>
    <%=f.label :content%><br>
    <%=f.text_area :content%>
  </p>
  <p>
    <%= f.submit%>
  </p>
<%end%>
<%= link_to 'Back Homepage', books_path %>
