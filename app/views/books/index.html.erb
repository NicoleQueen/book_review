<div id="content">
  <div id="main_content">
    <h2>Homepage</h2>
    <% @books.each do |book| %>
      <h1 style='font-size:1.5rem;margin-top:50px'>
        <%= link_to book.title, book %>
      </h1>
      <p>Author: <%= book.author %></p>
      <div><img src="<%= book.image_url%>" /></div>
      <h3><%= link_to 'Reviews', "/books/#{book.id}"%></h3>
    <% end %>
    <h3>Find Book Title:</h3>
    <%= form_for :book, as: :post, url: find_titles_path, method: :post do |f|%>
      <%= f.text_field :find_titles_path%>
      <button type="submit">Find Book</button>
    <%end%>
    <%#= form_for @post, as: :post, url: post_path(@post), method: :patch, html: { class: "edit_post", id: "edit_post_45" } do |f| %>
      <p>Book Title: <%#= f.text_field :title%></p>
      <%#= f.submit "Find Book" %>
    <%#end%>
  </div><!-- end of main_content -->
</div><!-- end of content -->